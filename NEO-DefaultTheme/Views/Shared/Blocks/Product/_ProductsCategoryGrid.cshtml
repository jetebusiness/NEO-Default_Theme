@model DomainProduct.Result

<div class="type-grid">
    <div class="ui three doubling cards centered">
        @if (Model != null && Model.Products.Count() > 0)
        {
            foreach (var product in Model.Products)
            {
            <!-- Page: ~/Views/Shared/Object/Product/_ProductInCard.cshtml -->
            @Html.Partial("~/Views/Shared/Object/Product/_ProductInCard.cshtml", product)
            }
        }
        else
        {
            <div class="row">Nenhuma produto encontrado nesta categoria!</div>
        }
    </div>

    @if (Model.Settings.PageCount > 1)
    {
        <div class="ui centered grid ">
            <div class="row">
                <div class="center aligned column">
                    <!-- Page: ~/Views/Shared/Parts/_Pagination.cshtml -->
                    @Html.Partial("~/Views/Shared/Parts/_Pagination.cshtml", Model.Settings, new ViewDataDictionary() { { "Url", HttpContext.Current.Request.Url.AbsolutePath } } )
                </div>
            </div>
        </div>
    }
</div>