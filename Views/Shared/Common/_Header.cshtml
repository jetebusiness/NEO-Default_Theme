@{
    string urlCanonical = Request.Url.AbsolutePath.ToLower();
    string canonical = "https://" + Request.Url.Host + Request.Path;

    string[] words = urlCanonical.Split('/');

    if (words[1] == "" || words[1].ToLower() == "home")
    {
        <link rel="canonical" href="@("https://" + Request.Url.Host)" />
    }
    else
    {
        <link rel="canonical" href="@canonical" />
    }
}

